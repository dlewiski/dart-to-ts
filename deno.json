{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@dart-to-ts/analyzer",
  "version": "2.0.0",
  "description": "Dart to TypeScript application analyzer - Deno Edition",
  "exports": "./main.ts",

  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-env --allow-net --allow-run main.ts",
    "start": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-run",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno task lint && deno task fmt:check && deno check main.ts",
    "analyze": "deno run --allow-read --allow-write --allow-env --allow-net main.ts",
    "hook:install": "git config core.hooksPath .githooks && echo '✅ Git hooks installed! Formatting will run automatically on commit.'",
    "hook:uninstall": "git config --unset core.hooksPath && echo '✅ Git hooks uninstalled.'",
    "precommit": "deno fmt && deno lint && echo '✅ Pre-commit checks passed!'",
    "commit": "deno task precommit && git add -A && git commit"
  },

  "imports": {
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "zod": "npm:zod@^3.22.0"
  },

  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "lib": ["deno.window", "dom", "dom.iterable", "esnext"]
  },

  "lint": {
    "include": ["src/", "test/", "*.ts"],
    "exclude": ["dist/", "analysis/", "frontend_release_dashboard/"],
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "test/", "*.ts", "*.md", "*.json"],
    "exclude": [
      "dist/",
      "analysis/",
      "frontend_release_dashboard/",
      "node_modules/",
      "pnpm-lock.yaml"
    ]
  },

  "test": {
    "include": ["test/", "src/**/*.test.ts"],
    "exclude": ["dist/", "node_modules/"]
  },

  "lock": true,
  "nodeModulesDir": "none",

  "exclude": [
    "dist/",
    "node_modules/",
    "frontend_release_dashboard/",
    ".git/"
  ]
}
